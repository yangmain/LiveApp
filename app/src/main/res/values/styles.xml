<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edit_width_height">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="weight_center_horizontal" parent="edit_width_height">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="edit_background" parent="weight_center_horizontal">
        <item name="android:background">@drawable/bg_input_fillet_white</item>
        <item name="android:textColorHint">@color/color_text_gray</item>
        <item name="android:textCursorDrawable">@color/clr_dark</item>
        <item name="android:textColor">@color/clr_dark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="bottom_navigation_button">
        <item name="android:background">@color/clr_white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="text_style">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_text_gray</item>
    </style>

    <style name="bottom_dialog_button" parent="text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/btn_white_angle_bg</item>
    </style>

    <style name="float_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
