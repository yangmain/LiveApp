<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiabo.liveapp.view.LoginActivity"
    android:background="@color/background_login_register">

    <EditText
        android:id="@+id/login_password"
        style="@style/edit_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/input_password" />

    <EditText
        android:id="@+id/login_username"
        style="@style/edit_background"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/login_password"
        android:hint="@string/input_username"/>

    <Button
        android:id="@+id/login_in_btn"
        android:layout_marginTop="20dp"
        style="@style/button_login_register"
        app:layout_constraintTop_toBottomOf="@id/login_password"
        android:hint="@string/login_text"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/step_into_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="@string/step_into_register"
        android:textColorHint="#ea7f25"
        android:textSize="15sp"
        android:gravity="center_horizontal"/>

</android.support.constraint.ConstraintLayout>
